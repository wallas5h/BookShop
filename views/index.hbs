<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BooksShop</title>

  <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
  {{>loader}}

  {{>header}}

  {{>navbar-bottom}}

  {{#if isActiveToken}}

  <div class="login-form-container">

    <div id="close-login-btn" class="fas fa-times"></div>

    <form action="/login/logout" method="post">
      <h3>Sign in</h3>
      <span style="text-transform: none;">You are logged as user: <strong style="text-transform: none;">{{mail}}</strong></span>

      <input type="submit" value="logout" class="btn">

    </form>
  </div>

  {{/if}}

  {{#unless isActiveToken}} {{>login-container}} {{/unless}}


  {{!-- {{>home-section featuredBooks}} --}}

  <section class="home" id="home">

    <div class="row">

      <div class="content">
        <h3>upto 75% off</h3>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Magnam deserunt nostrum accusamus. Nam alias sit
          necessitatibus, aliquid ex minima at!</p>
        <a href="#" class="btn">shop now</a>
      </div>

      <div class="swiper books-slider">
        <div class="swiper-wrapper">
          {{#each featuredBooks}}
          <a href="/book/{{this._id}}" class="swiper-slide"><img src="image/{{this.image}}.png" alt="Image of book {{title}}"></a>
          {{/each}}
        </div>
        <img src="image/stand.png" class="stand" alt="">
      </div>
    </div>
  </section>

  {{>icons-section}}

  {{!-- {{>featured-section}} --}}

  <section class="featured" id="featured">

    <h1 class="heading"> <span>featured books</span> </h1>

    <div class="swiper featured-slider">

      <div class="swiper-wrapper">

        {{#each featuredBooks}}

        <div class="swiper-slide box">
          <div class="icons">
            <a href="/wishlist/add/{{this._id}}" class="fas fa-heart"></a>
            <a href="/book/{{this._id}}" class="fas fa-eye"></a>
          </div>
          <div class="image">
            <img src="image/{{this.image}}.png" alt="">
          </div>
          <div class="content">
            <h3>{{this.title}}</h3>
            <div class="price">${{this.newPrice}} <span>${{this.oldPrice}}</span></div>
            <a  href="/cart/add/{{this._id}}" class="btn">add to cart</a>
          </div>
        </div>

        {{/each}}

      </div>

      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>

    </div>

  </section>

  {{>newsletter-section}}

  {{!-- {{>arrivals-section}} --}}

  <section class="arrivals" id="arrivals">

    <h1 class="heading"> <span>new arrivals</span> </h1>

    <div class="swiper arrivals-slider">

      <div class="swiper-wrapper">

        {{#each featuredBooks}}

        <a href="/book/{{this._id}}" class="swiper-slide box">
                <div class="image">
                    <img src="image/{{this.image}}.png" alt="Image of book {{title}}">
                </div>
                <div class="content">
                    <h3>{{this.title}}</h3>
                    <div class="price">${{this.newPrice}} <span>${{this.oldPrice}}</span></div>
                    <div class="stars">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>
                </div>
        </a>

        {{/each}}

      </div>
    </div>

    <div class="swiper arrivals-slider">

      <div class="swiper-wrapper">

        {{#each arrivalsBooks}}

        <a href="/book/{{this._id}}" class="swiper-slide box">
                <div class="image">
                    <img src="image/{{this.image}}.png" alt="">
                </div>
                <div class="content">
                    <h3>{{this.title}}</h3>
                    <div class="price">${{this.newPrice}} <span>${{this.oldPrice}}</span></div>
                    <div class="stars">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>
                </div>
        </a>

        {{/each}}

      </div>
    </div>

  </section>

  {{>deal-section}}

  {{>review-section}}

  {{>blogs-section}}

  {{>footer-section}}





  <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
  <script src="./js/script.js"></script>
</body>

</html>