<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  {{>header}}

  {{>navbar-bottom}}

  <section class="shoppingCard">

    <h1 class="heading"> <span>Shopping Cart</span> </h1>

    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Amount</th>
          <th>Price</th>

          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each shoppingCard}}
        <tr class="box">
          <th>
            <div class="image">
              <a href="/book/{{this._id}}" class="swiper-slide"><img src=" http://localhost:3000/image/{{image}}.png" alt="Image of book {{title}}"></a>
            </div>
          </th>

          <th>
            <h3>{{this.title}}</h3>
          </th>

          <th>
            <div class="amount">
              {{!-- <span>{{this.count}}</span> --}}
              <input type="number" name="amount" value="1" min="1" max="{{this.count}}">
            </div>
          </th>

          <th>
            <span class="price">${{this.newPrice}}</span>
          </th>

          <th>
            <div class="remove">
              <a href="/cart/remove/{{this._id}}" class="fa-solid fa-trash-can"></a>
              {{!-- <i></i> --}}
            </div>

          </th>
        </tr>
        {{/each}}
        <tr>
          <th></th>
          <th></th>
          <th class="summary">Sum</th>
          <th class="sum">${{sum}}</th>
        </tr>
      </tbody>
    </table>

    <div class="order"><a class="btn" href="/order">Order now</a></div>



  </section>
  {{>login-container}}
  {{>footer-section}}

  <script src="./js/script.js"></script>
</body>

</html>